{
  "name": "pino-logviewer",
  "version": "1.0.0",
  "main": "dist-electron/main/index.js",
  "description": "Pino LogViewer.",
  "author": "Tal Amsalem <tamsalem@paloaltonetworks.com>",
  "license": "MIT",
  "private": true,
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --mac",
    "debug-build": "tsc && vite build && DEBUG=electron-builder* electron-builder --mac",
    "preview": "vite preview",
    "pretest": "tsc && vite build",
    "test": "vitest run"
  },
  "build": {
    "mac": {
      "icon": "public/log-logo.icns",
      "category": "public.app-category.developer-tools",
      "fileAssociations": [
        {
          "ext": "log",
          "name": "Log File",
          "role": "Editor"
        },
        {
          "ext": "txt",
          "name": "Text File",
          "role": "Editor"
        }
      ]
    },
    "files": [
      "dist-electron",
      "dist"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/themes": "^3.2.1",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.3.9",
    "framer-motion": "^12.23.11",
    "lucide-react": "^0.530.0",
    "react-day-picker": "^9.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.21",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.2",
    "vite": "^5.4.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.1.5"
  }
}
